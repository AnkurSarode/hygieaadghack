  <div class="row nomargin">
    <div class="top-bar-row">
    <div class="col s10 m10 l10 push-l1 push-s1 push-m1">
      <div class="row top-bar">
        <div class="col s12 m4 l4">
          <div class="top-bar-item right-side-border" id="signin-modal-trigger">Personal Details</div>
        </div>
        <div class="col s12 m4 l4">
          <div class="top-bar-item right-side-border" id="prescription-trigger">Current Prescriptions</div>
        </div>
        <div class="col s12 m4 l4">
          <!-- Dropdown Trigger -->
        <div class="top-bar-item dropdown-button" data-activates='history-dropdown'>
          History
          <!-- Dropdown Structure -->
          <ul id='history-dropdown' class='dropdown-content'>
