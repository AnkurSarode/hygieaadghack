</div>
 <!-- SIGN UP MODAL -->
<div id="signup-modal" class="modal">
  <div class="modal-header z-depth-1">
    <div class="heading">
      <h4>Sign Up</h4>
    </div>
  </div>
  <div class="modal-content">
    <form method="post" action="http://localhost:3000/register/">
    <div class="row">
    <div class="col m10 l10 push-m1 push-l1">
    <div class="input-group">
      <label for="Name">Name</label>
      <input type="text" name="name">
    </div>
    <div class="input-group">
      <label for="ph_no">Phone Number</label>
      <input type="text" name="phone">
    </div>
    <div class="input-group">
      <label for="age">Age</label>
      <input type="text" name="age">
    </div>
    <div class="input-group">
      <label for="email Id">Email Id</label>
      <input type="email" name="email">
    </div>
    <div class="input-group">
      <label for="address">Address</label>
      <input type="text" name="address">
    </div>
  </div>
  </div>
  </div>
  <div class="modal-footer">
    <div class="input-group">
      <button type="submit" class="submit-btn modal-action modal-close waves-effect waves-red lignten-3 btn-flat">Submit</button>
    </div>
  </div>
  </form>
</div>
<!-- Modal Ends -->

<!-- SIGN In MODAL -->
<div id="signin-modal" class="modal">
  <div class="modal-header z-depth-1">
    <div class="heading">
      <h4>Record</h4>
    </div>
  </div>

 <div class="modal-content">
   <form method="post" action="http://localhost:3000/details/">
     <div class="row">
      <div class="col m10 l10 push-m1 push-l1">
      <div class="input-group">
        <label for="ID">Patient ID</label>
        <input name="id" type="text">
      </div>
    </div>
    </div>
 </div>
 <div class="modal-footer">
   <div class="input-group">
     <button type="submit" class="submit-btn modal-action modal-close waves-effect waves-red lignten-3 btn-flat">Get Details</button>
   </div>
 </div>
 </form>
</div>
<!-- Modal Ends -->
<!--History Timeline Modal-->
<div id="history-timeline-modal" class="modal">
  <div class="modal-header z-depth-1">
    <div class="heading">
      <h4>Record</h4>
    </div>
  </div>

 <div class="modal-content">
   <form method="post" action="http://localhost:3000/history/">
     <div class="row">
      <div class="col m10 l10 push-m1 push-l1">
      <div class="input-group">
        <label for="ID">Patient ID</label>
        <input name="id" type="text">
      </div>
    </div>
    </div>
 </div>
 <div class="modal-footer">
   <div class="input-group">
     <button type="submit" class="submit-btn modal-action modal-close waves-effect waves-red lignten-3 btn-flat">Get Details</button>
   </div>
 </div>
 </form>
</div>
<!--Modal Ends-->
  <div class="details">

  </div>

  <div class="history">
    <div class="row">
      <div class="col s10 m8 l8 push-s1 push-m2 push-l2">
        <div class="history-search">
            <div class="white-heading z-depth-1 heading">
              <h3>History</h3>
            </div>
        <div class="row">
        <form method="post" action="http://localhost:3000/addHistory/">
          <div class="col s12 m5 l5 push-m1 push-l1">
            <div class="history-searchbar">
              <div class="input-group">
              <label for="Name">Name</label>
              <input type="text" name="name" placeholder="" class="">
              </div>
            </div>
            <div class="history-searchbar">
              <div class="input-group">
              <label for="Date">Date</label>
              <input type="text" name="date" placeholder="" class="">
              </div>
            </div>
            <div class="history-searchbar">
              <div class="input-group">
              <label for="Doctor_Name">Consulting Doctor</label>
              <input type="text" name="doctor" placeholder="" class="">
              </div>
            </div>
            <div class="history-searchbar">
              <div class="input-group">
              <label for="time">Time Of Consultation</label>
              <input type="text" name="time" placeholder="" class="">
              </div>
            </div>
            <div class="history-searchbar">
              <div class="input-group">
              <label for="Ailment">Ailment</label>
              <input type="text" name="ailment" placeholder="" class="">
              </div>
            </div>
            <div class="history-searchbar">
              <div class="input-group">
              <label for="prescription">Prescription</label>
              <input type="text" name="prescription" placeholder="" class="">
              </div>
            </div>
          </div>
        </form>
          <div class="col s0 m5 l5 push-m1 push-l1" id="history-image-col">
            <div class="history-img-holder">
              <img src="/img/history.jpg" class="history-img"><br>
              <a href="#" id="history-search-btn" class="submit-btn modal-action modal-close waves-effect waves-white lignten-3 btn-flat">Add</a>
            </div>
          </div>
        </div>
      </div>
      </div>
    </div>
  </div>


<div class="history-timeline-row">
  <div class="row">
    <div class="col s10 m8 l8 push-s1 push-m2 push-l2">
      <div class="history-timeline">
        <div class="row">
          <div class="col s10 m5 l5 push-l3 push-s1 push-m3" id="collapsible">
            <div class="history-timeline-name">
              <h6> <%= name %>'s Medical History</h6>
            </div>
            <div class="red-timeline">

            </div>
      <% for(i=0;i<history.length;i++) { %>
        <ul class="collapsible popout" data-collapsible="accordion">
          <li>
            <div class="collapsible-header history-timeline-margin"><%= history[i].date %></div>
            <div class="collapsible-body">
              <div class="row">
                <div class="col s5 m6 l6 push-m1 push-l1">
                  Doctor:
                </div>
                <div class="col s5 m6 l6 pull-l1 pull-m1">
                  <span class="timeline-data"><%= history[i].doctor %></span>
                </div>
              </div>
              <div class="row">
                <div class="col s5 m6 l6 push-m1 push-l1">
                  Timing:
                </div>
                <div class="col s5 m6 l6 pull-l1 pull-m1">
                  <span class="timeline-data"><%= history[i].time %></span>
                </div>
              </div>
              <div class="row">
                <div class="col s5 m6 l6 push-m1 push-l1">
                  Ailment
                </div>
                <div class="col s5 m6 l6 pull-l1 pull-m1">
                  <span class="timeline-data"><%= history[i].ailment %></span>
                </div>
              </div>
              <div class="row">
                <div class="col s5 m6 l6 push-m1 push-l1">
                  Prescription
                </div>
                <div class="col s5 m6 l6 pull-l1 pull-m1">
                  <span class="timeline-data"><%= history[i].prescription %></span>
                </div>
              </div>
            </div>
          </li>
          <% } %>
        </ul>
        </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="prescription">
<div class="row">
  <div class="col s10 m8 l8 push-s1 push-m2 push-l2">
    <div class="white-heading z-depth-1 heading">
      <h3>Prescription</h3>
    </div>
    <div class="prescription-timeline">
      <div id="timeline-container-force-position" type="text"></div>
    </div>
  </div>
</div>
</div>

</body>
</html>
